{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/*",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts",
    "types/*.d.ts",
    "*.ts",
    "*.vue",
    "*.json",
    "*.d.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "verbatimModuleSyntax": false,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vite/client", "node"]
  }
}
